<mvc:View
	controllerName="cromos.it.RelatorioClientes.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				mode="MultiSelect"
				delete="onClienteDelete"
				items="{
					path: '/ClienteSet',
					sorter: {
						path: 'ID',
						descending: true
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						
						<Button icon="sap-icon://delete" press="onClienteDelete" />
						<Button text="Criar" type="Emphasized" press="onCriarCliente" />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search=".onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="idColumn">
						<Text text="ID"/>
					</Column>
					<Column id="nameColumn">
						<Text text="Nome" id="nameColumnTitle"/>
					</Column>
					<Column id="unitNumberColumn" hAlign="End">
						<Text text="UF" id="unitNumberColumnTitle"/>
					</Column>
					<Column hAlign="End">
						<Text text="Status" />
					</Column>
					<Column hAlign="End">
						<Text text="Enviar Email" />
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press=".onPress">
						<cells>
							<ObjectIdentifier
								title="{ID}"/>
							<ObjectIdentifier
								title="{Nome}"/>
							<ObjectNumber
								unit="{UF}"/>
							<ObjectStatus
								text="{Status}"
							/>
							<Button icon="sap-icon://letter" press="onEnviarEmail" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>