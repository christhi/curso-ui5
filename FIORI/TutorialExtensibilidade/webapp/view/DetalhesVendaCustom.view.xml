<mvc:View
    controllerName="cristiano.cromos.it.walkthrough.controller.DetalhesVenda"
	height="100%"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="detalhesVendaPage"
		title=" Detalhes de Venda" 
        showNavButton="true"
		navButtonPress="onNavBack">

		<content>
			<ObjectHeader
				title="{Descricao}"
				backgroundDesign="Solid"
				number="{
					parts:[{path:'ValorLiquido'},{path:'CurrencyCode'}],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {showMeasure: false}
				}"
				numberUnit="BRL" >
				<attributes>
                    <ObjectAttribute title="Data de Criação" 
					text="{
						path: 'DataCriacao',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							style: 'short'
							}
						}" />
				</attributes>
				<statuses>
					<ObjectStatus title="Status" text="Confirmado" state="Success" />
				</statuses>
			</ObjectHeader>
			
			<IconTabBar
				expanded="{device>/isNoPhone}"
				class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						text="Info">
						<f:SimpleForm
							minWidth="1024"
							maxContainerCols="2"
							layout="ResponsiveGridLayout" >
							
							<Label text="ID"/>
							<Text text="{IDVenda}"/>
							<Label text="Cliente"/>
							<Text text="{Cliente}"/>
							<Label text="Criado Por"/>
							<Text text="{CriadoPor}"/>
						</f:SimpleForm>
					</IconTabFilter>
					<IconTabFilter
						text="Anexos">
						<List headerText="A List" showSeparators="Inner" >
						</List>
					</IconTabFilter>
					<IconTabFilter
						text="Notas">
						<FeedInput />
					</IconTabFilter>
				</items>
			</IconTabBar>
				

		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>