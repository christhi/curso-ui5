<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core" >
   <List
        headerText="Lista de Vendas"
        growing="true"
		growingThreshold="4"
		growingScrollToLoad="false"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{
            path: '/VendaSet',
            parameters:{
                expand: 'cliente'
            }
            }" >
        <items>
            <StandardListItem
            press=".onVendaSelected"
		    type="Active"
			title="{Descricao}"
			info="{ValorLiquido}"/>
      </items>
   </List>

   <Panel id="vendaDetailsPanel" headerText="Detalhes Venda" class="sapUiResponsiveMargin" width="auto">
    <l:Grid defaultSpan="L3 M6 S12" containerQuery="true">
        <Label text="ID :" />
        <Input value="{IDVenda}" enabled="false" />
        
        <Label text="Descrição:" />
        <Input value="{Descricao}" />

        <Label text="Data de Criação:" />
        <Input value="{DataCriacao}" />
        
        <Label text="Cliente:" />
        <Input value="{Cliente}" />
        
        <Label text="Valor Líquido:" />
        <Input value="{ValorLiquido}" />
        
        <Label text="Criado Por:" />
        <Input value="{CriadoPor}" />

        <Label text="Nome Cliente:" />
        <Input value="{cliente/Nome}" />
    </l:Grid>    
  </Panel>

</core:FragmentDefinition>