<mvc:View
    controllerName="cristiano.cromos.it.walkthrough.controller.DetalhesVenda"
	height="100%"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="detalhesVendaPage"
		title=" Detalhes de Venda" 
        showNavButton="true"
		navButtonPress="onNavBack">

		<content>
			<ObjectHeader
				title="{Descricao}"
				backgroundDesign="Solid"
				number="{
					parts:[{path:'ValorLiquido'},{path:'CurrencyCode'}],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {showMeasure: false}
				}"
				numberUnit="BRL" >
				<attributes>
					<ObjectAttribute title="Criado Por" text="{CriadoPor}" />
                    <ObjectAttribute title="Data de Criação" 
					text="{
						path: 'DataCriacao',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							style: 'short'
							}
						}" />
					<ObjectAttribute title="Cliente" text="{Cliente} {cliente/Nome}" />
				</attributes>
				<statuses>
					<ObjectStatus title="Status" text="Confirmado" state="Success" />
				</statuses>
			</ObjectHeader>

            <Panel headerText="Painel de Detalhes" width="auto" class="sapUiResponsiveMargin">
			<Label text="ID do Documento: " />
			<Label text="{IDVenda}" />
				
            </Panel>

		</content>
	</Page>
</mvc:View>

